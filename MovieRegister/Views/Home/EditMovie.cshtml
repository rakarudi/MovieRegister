@model MovieRegister.Views.ViewModel.MovieViewModel

@{
    ViewBag.Title = "Movie Register";
}


<div id="EditMovie" class="list-group">

    <h2>Edit movie</h2>

    @{ using (Html.BeginForm())
        {
            <fieldset>
                <ol>
                    <li>
                        @Html.LabelFor(Model => Model.Title)
                        @Html.TextBoxFor(Model => Model.Title, new {disabled="disabled", @readonly = "readonly" })
                        @Html.ValidationMessageFor(Model => Model.Title, String.Empty, new { @style = "color:red;" })
                    </li>
                    <li>
                        @Html.LabelFor(Model => Model.Description)
                        @Html.TextAreaFor(Model => Model.Description)
                        @Html.ValidationMessageFor(Model => Model.Description, String.Empty, new { @style = "color:red;" })
                    </li>
                    <li>
                        @Html.LabelFor(Model => Model.Length)
                        @Html.TextBoxFor(Model => Model.Length)
                        @Html.ValidationMessageFor(Model => Model.Length, String.Empty, new { @style = "color:red;" })
                    </li>
                    <li>
                        @Html.LabelFor(Model => Model.Genre)
                        @Html.TextBoxFor(Model => Model.Genre)
                        @Html.ValidationMessageFor(Model => Model.Genre, String.Empty, new { @style = "color:red;" })
                    </li>
                    <li>
                        @Html.LabelFor(Model => Model.Year)
                        @Html.TextBoxFor(Model => Model.Year)
                        @Html.ValidationMessageFor(Model => Model.Year, String.Empty, new { @style = "color:red;" })
                    </li>
                    <li>
                        <input type="submit" value="Edit movie" />
                    </li>
                </ol>
            </fieldset>
        }
    }

</div>

